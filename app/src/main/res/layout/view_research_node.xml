<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/node_background"
        android:layout_width="196px"
        android:layout_height="196px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/research_node_disabled_background" />

    <ImageView
        android:id="@+id/research_content"
        android:layout_width="128px"
        android:layout_height="128px"
        android:tintMode="src_in"
        app:layout_constraintBottom_toBottomOf="@+id/node_background"
        app:layout_constraintEnd_toEndOf="@+id/node_background"
        app:layout_constraintStart_toStartOf="@+id/node_background"
        app:layout_constraintTop_toTopOf="@+id/node_background"
        app:srcCompat="@drawable/anvil"
        app:tint="#000000" />
</androidx.constraintlayout.widget.ConstraintLayout>