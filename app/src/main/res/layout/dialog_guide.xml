<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#111111">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/textView"
                style="@style/GuideDialog_Title"
                android:layout_width="match_parent"
                android:paddingTop="0dp"
                android:text="Introduction" />

            <TextView
                android:id="@+id/textView2"
                style="@style/GuideDialog_Description"
                android:layout_width="match_parent"
                android:text="Welcome to this game. This game is about clicking, researching and discovering new stuff." />

            <TextView
                android:id="@+id/textView3"
                style="@style/GuideDialog_Title"
                android:layout_width="match_parent"
                android:text="[1] Clicking" />

            <TextView
                android:id="@+id/textView4"
                style="@style/GuideDialog_Description"
                android:layout_width="match_parent"
                android:text="Every item needs certain amount of clicks. After enough clicks, you receive money, XP and maybe some research points." />

            <TextView
                android:id="@+id/textView5"
                style="@style/GuideDialog_Title"
                android:layout_width="match_parent"
                android:text="[2] Unlocking new Items"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/textView6"
                style="@style/GuideDialog_Description"
                android:layout_width="match_parent"
                android:text="You can unlock new items by opening crates. Each crate costs some money and with each opening price will be increased. Currently there are 2 crates (other crates will be added in the future)." />

            <TextView
                android:id="@+id/textView7"
                style="@style/GuideDialog_Title"
                android:layout_width="match_parent"
                android:text="[3] Research"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/textView8"
                style="@style/GuideDialog_Description"
                android:layout_width="match_parent"
                android:text="By clicking, you sometimes receive research point. With 0.5.0v beta update, you can finally spend these points." />

            <TextView
                android:id="@+id/textView9"
                style="@style/GuideDialog_Title"
                android:layout_width="match_parent"
                android:text="[4] Rank up"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/textView10"
                style="@style/GuideDialog_Description"
                android:layout_width="match_parent"
                android:text="You can rank up by gathering XP. XP's are gathered by clicking of course. With new update, you are unlocking new crates." />

            <TextView
                android:id="@+id/textView11"
                style="@style/GuideDialog_Title"
                android:layout_width="match_parent"
                android:text="Rarities and ranks"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/textView12"
                style="@style/GuideDialog_Description"
                android:layout_width="match_parent"
                android:text="Game rarity list:\n-COMMON\n-UNCOMMON\n-RARE\n-EPIC\n-LEGENDARY\n-MYTHIC\n\nGame rank list:\n-BRONZE\n-IRON\n-GOLD\n-PLATINUM\n-DIAMOND\n-RUBY\n-AMETHYST\n-AURORA" />

            <TextView
                android:id="@+id/textView13"
                style="@style/GuideDialog_Title"
                android:layout_width="match_parent"
                android:text="About"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/textView14"
                style="@style/GuideDialog_Description"
                android:layout_width="match_parent"
                android:text="This game is my first app ever published on google play. I was excited when publishing this. Game may won't be so much fun, but I'am preparing more fun apps. I'll be glad for every feedback. Or you can join us on the discord.\n\n\t\t\t\t-YozoZChomutova" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>