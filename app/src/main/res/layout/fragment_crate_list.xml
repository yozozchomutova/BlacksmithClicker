<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111" >

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/close">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <net.jozoproductions.blacksmithclicker.crates.CrateItem
                android:id="@+id/crate_common"
                android:layout_width="match_parent"
                android:layout_height="80dp">

            </net.jozoproductions.blacksmithclicker.crates.CrateItem>

            <net.jozoproductions.blacksmithclicker.crates.CrateItem
                android:id="@+id/crate_uncommon"
                android:layout_width="match_parent"
                android:layout_height="80dp">

            </net.jozoproductions.blacksmithclicker.crates.CrateItem>

            <net.jozoproductions.blacksmithclicker.crates.CrateItem
                android:id="@+id/crate_rare"
                android:layout_width="match_parent"
                android:layout_height="80dp">

            </net.jozoproductions.blacksmithclicker.crates.CrateItem>

            <net.jozoproductions.blacksmithclicker.crates.CrateItem
                android:id="@+id/crate_epic"
                android:layout_width="match_parent"
                android:layout_height="80dp">

            </net.jozoproductions.blacksmithclicker.crates.CrateItem>

            <net.jozoproductions.blacksmithclicker.crates.CrateItem
                android:id="@+id/crate_legendary"
                android:layout_width="match_parent"
                android:layout_height="80dp">

            </net.jozoproductions.blacksmithclicker.crates.CrateItem>

            <net.jozoproductions.blacksmithclicker.crates.CrateItem
                android:id="@+id/crate_mythic"
                android:layout_width="match_parent"
                android:layout_height="80dp">

            </net.jozoproductions.blacksmithclicker.crates.CrateItem>

            <net.jozoproductions.blacksmithclicker.crates.CrateItem
                android:id="@+id/crate_christmas"
                android:layout_width="match_parent"
                android:layout_height="80dp">

            </net.jozoproductions.blacksmithclicker.crates.CrateItem>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/x" />

    <TextView
        android:id="@+id/crate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="Crates"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>